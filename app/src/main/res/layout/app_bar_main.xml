<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.CBEBirr.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.CBEBirr.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="400dp"
        android:background="@color/ic_launcher_background">

        <TextView
            android:text="Your Account Balance is:-"
            android:textSize="45dp"
            android:textStyle="bold" />

    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="50dp"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:minHeight="550dp"
        android:padding="8dp"
        android:paddingTop="60dp"
        android:rowCount="2">


        <Button
            android:id="@+id/transfer"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#000"
            android:elevation="0dp"
            android:text="Transfer"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/airtime"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#000"
            android:elevation="0dp"
            android:text="Pay Bill"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/cashout"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#000"
            android:elevation="0dp"
            android:text="Cash Out"
            android:textColor="@color/black" />

        <Button

            android:id="@+id/paybill"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#000"
            android:elevation="0dp"
            android:text="Air Time"
            android:textColor="@color/black" />

    </GridLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>